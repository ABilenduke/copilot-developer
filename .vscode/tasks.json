{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "generate-readme",
      "type": "shell",
      "command": "node ${workspaceFolder}/scripts/readme-update.js",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Generates the README.md file using readme-update.js script."
    },
    {
      "label": "toolkit-validate",
      "type": "shell",
      "command": "node ${workspaceFolder}/scripts/toolkit-validate.js",
      "problemMatcher": [],
      "group": "build",
      "detail": "Validates all toolkit manifest files."
    },
    {
      "label": "create-toolkit",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/scripts/create-toolkit.js",
        "--id",
        "${input:toolkitId}",
        "--tags",
        "${input:tags}"
      ],
      "problemMatcher": [],
      "group": "build",
      "detail": "Creates a new toolkit manifest template."
    }
  ],
  "inputs": [
    {
      "id": "toolkitId",
      "description": "Toolkit ID (lowercase, hyphen-separated)",
      "default": "my-toolkit",
      "type": "promptString"
    },
    {
      "id": "tags",
      "description": "Comma separated list of tags",
      "default": "tag1,tag2",
      "type": "promptString"
    }
  ]
}
